{
    "compilerOptions": {
        "baseUrl": ".",
        "allowJs": false,
        "checkJs": false,
        "outDir": "./dist",
        "rootDir": "./src",
        "target": "ES2020",
        "removeComments": true,
        "module": "CommonJS",
        "strict": true,
        "strictNullChecks": false,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "noEmitOnError": true,
        "noImplicitAny": false,
        "skipLibCheck": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}